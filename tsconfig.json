{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2019", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "resolveJsonModule": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": false,
        "target": "ES6",
        "baseUrl": "./"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": [
        "node_modules",
        "src/lambda_api",
        "src/lambda_sns",
        "src/lambda_eb",
        "src/lambda_dbstream",
        "src/lambda_s3stream",
        "src/lambda_ingest"
    ]
}
